<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:text="创建数据库"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onCreateDatabase"/>
    <Button
        android:text="删除数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onDelData"/>
    <Button
        android:text="修改数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onUpdateData"/>
    <Button
        android:text="查询所有数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onQueryAll"/>
    <Button
        android:text="按姓名查询"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onQueryByName"/>

</LinearLayout>
